@model Soccer.Web.Models.TeamViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="panel-body">
    <div class="row">
        <div class="col-sm-12 text-right">
            <a class="btn btn-primary" asp-action="Index"><span class="glyphicon glyphicon-refresh"></span></a>
            <a class="btn btn-danger" asp-action="Index"><span class="glyphicon glyphicon-arrow-left"></span></a>
        </div>
    </div>
    <h3 class="text-primary">Nuevo equipo</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <partial name="_Team"/>
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-primary">
                        <span class="glyphicon glyphicon-plus"></span>
                        Crear equipo
                    </button> 
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
